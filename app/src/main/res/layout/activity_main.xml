<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.escape.escape_new.MainActivity">

    <RelativeLayout
        android:layout_width="600dp"
        android:layout_height="294dp"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="-4dp">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="95dp"
            android:layout_height="300dp"
            android:layout_above="@+id/log"
            android:layout_alignParentEnd="true"
            android:columnCount="1"
            android:rowCount="6">

            <ImageButton
                android:id="@+id/b1"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="#ffffffff"
                android:visibility="invisible"
                app:srcCompat="@drawable/bookbr90" />

            <ImageButton
                android:id="@+id/b2"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:elevation="0dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/mes" />

            <ImageButton
                android:id="@+id/b3"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:visibility="invisible"
                app:srcCompat="@drawable/brush1" />

            <ImageButton
                android:id="@+id/b4"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:visibility="invisible"
                app:srcCompat="@drawable/control" />

            <ImageButton
                android:id="@+id/b5"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="#ffffffff"
                android:visibility="invisible"
                app:srcCompat="@drawable/chickfood" />

            <ImageButton
                android:id="@+id/b6"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_above="@+id/log"
                android:layout_marginBottom="62dp"
                android:layout_marginEnd="32dp"
                android:layout_toStartOf="@+id/gridLayout"
                android:background="#ffffffff"
                android:visibility="invisible"
                app:srcCompat="@drawable/key" />

        </GridLayout>

        <TextView
            android:id="@+id/log"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/gridLayout"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="496dp"
            tools:layout_editor_absoluteY="250dp" />

        <ImageView
            android:id="@+id/room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="7dp"
            android:layout_toStartOf="@+id/gridLayout"
            app:srcCompat="@drawable/room" />

        <ImageButton
            android:id="@+id/left"
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:background="#ff7f50"
            app:srcCompat="@drawable/left"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/right"
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/gridLayout"
            app:srcCompat="@drawable/right" />
        <!-->其他<-->
        <Button
            android:id="@+id/pillow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/room"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="87dp"
            android:layout_marginEnd="96dp"
            android:background="#00000000"
            android:visibility="visible" />

        <Button
            android:id="@+id/not"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/pillow"
            android:layout_below="@+id/tv"
            android:layout_marginEnd="42dp"
            android:background="#00000000" />

        <Button
            android:id="@+id/pwdbox"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/ref_1"
            android:layout_toStartOf="@+id/not"
            android:background="#00000000"
            android:visibility="visible" />

        <Button
            android:id="@+id/bed"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/right" />
        <Button
            android:id="@+id/ref"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="#00000000"
            android:elevation="1dp"
            android:layout_alignTop="@+id/bed"
            android:layout_toStartOf="@+id/pwdbox" />
        <Button
            android:id="@+id/ref_1"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/pwdbox"
            android:layout_marginEnd="9dp" />
        <Button
            android:id="@+id/tv"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="#00000000"
            android:visibility="visible"
            android:layout_marginStart="29dp"
            android:layout_above="@+id/bed"
            android:layout_toEndOf="@+id/pwdbox" />

        <Button
            android:id="@+id/btbook"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/pillow"
            android:layout_toStartOf="@+id/pillow"
            android:background="#00000000" />

        <Button
            android:id="@+id/door"
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tv"
            android:background="#00000000" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
