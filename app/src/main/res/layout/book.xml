<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="619dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/log"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/gridLayout"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/book"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/book"
            android:layout_marginEnd="35dp"
            android:layout_toStartOf="@+id/log" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="95dp"
            android:layout_height="300dp"
            android:layout_above="@+id/log"
            android:layout_alignParentEnd="true"
            android:columnCount="1"
            android:rowCount="6">

            <ImageButton
                android:id="@+id/b1"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="#ffffffff"
                android:visibility="invisible"
                app:srcCompat="@drawable/bookbr90" />

            <ImageButton
                android:id="@+id/b2"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:elevation="0dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/mes" />

            <ImageButton
                android:id="@+id/b3"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:visibility="invisible"
                app:srcCompat="@drawable/brush1" />

            <ImageButton
                android:id="@+id/b4"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:visibility="invisible"
                app:srcCompat="@drawable/control" />

            <ImageButton
                android:id="@+id/b5"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="#ffffffff"
                android:visibility="invisible"
                app:srcCompat="@drawable/chickfood" />

            <ImageButton
                android:id="@+id/b6"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_above="@+id/log"
                android:layout_marginBottom="62dp"
                android:layout_marginEnd="32dp"
                android:layout_toStartOf="@+id/gridLayout"
                android:background="#ffffffff"
                android:visibility="invisible"
                app:srcCompat="@drawable/key" />

        </GridLayout>

        <ImageView
            android:id="@+id/openbook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/book"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="7dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/opendbook" />

        <ImageButton
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/book"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="13dp"
            android:background="#00000000"
            app:srcCompat="@android:drawable/btn_dialog" />

        <Button
            android:id="@+id/pick"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_alignBottom="@+id/btopen"
            android:layout_alignEnd="@+id/btopen"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="33dp"
            android:background="#00000000"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imgpick"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_alignBottom="@+id/pick"
            android:layout_alignEnd="@+id/pick"
            android:layout_marginBottom="9dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/pick" />

        <Button
            android:id="@+id/btopen"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@+id/exit"
            android:background="#00000000" />
    </RelativeLayout>
</LinearLayout>